#include <iostream>
#include<conio.h>
using namespace std;
int main()
{
    int rows,i,j,k;
    cout<<"enter  the number af rows";
    cin>>rows;
    cout<<"endl";
    for(i=0;i<rows;i++)
    {
        int val=1;
        for(j=1;j<(rows-1);j++)
        {
            cout<<"     ";
        }
            for(k=0;k<=i;k++)
            {
                cout<<"      "<<val;
                val=val*(i-k)/(k+1);
            }
            cout<<endl<<endl;
        }
        cout<<endl;
        return 0;
    }

